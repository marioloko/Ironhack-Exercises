<%= form_for [concert, comment] do |f| %>
	<div class="row">
		<div class="col-md-1">
			<%= f.label :title %>
		</div>

		<div class="col-md-10">
			<%= f.text_field :title %>
		</div>
		<br>

	</div>

	<div class="row">
		<div class="col-md-1">
			<%= f.label :body %>
		</div>

		<div class="col-md-10">
			<%= f.text_area :body %>
		</div>
		<br>

	</div>

	<%= f.submit 'Comment' %>
<% end %>
